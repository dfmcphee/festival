{
  "name": "festival",
  "version": "0.0.1",
  "description": "location sharing app",
  "main": "lib/server/server.js",
  "scripts": {
    "test": "jest",
    "clean": "rm -rf lib",
    "watch-js": "./node_modules/.bin/babel src -d lib --experimental -w",
    "dev-server": "node lib/server/webpack",
    "server": "nodemon lib/server/server",
    "prod-server": "node lib/server/server",
    "start": "npm run watch-js & npm run dev-server & npm run server",
    "build-client": "NODE_ENV=production webpack -p --config webpack.config.production.js",
    "build-server": "./node_modules/.bin/babel src/server/server.js --out-file lib/server/server.js",
    "prod-deploy": "npm run build-client ; npm run build-server ; npm run prod-server"
  },
  "license": "MIT",
  "engines" : { "node" : "^2.4.0" },
  "dependencies": {
    "babel": "^5.5.6",
    "babel-core": "^5.5.6",
    "babel-jest": "^5.3.0",
    "babel-loader": "^5.1.4",
    "jest-cli": "^0.5.4",
    "node-libs-browser": "^0.5.2",
    "socket.io-client": "^1.3.6",
    "ejs": "^2.3.4",
    "express": "^4.13.3",
    "nodemon": "^1.3.7",
    "react": "^0.13.3",
    "react-hot-loader": "^1.2.7",
    "react-router": "^0.13.3",
    "socket.io": "^1.3.6",
    "underscore": "^1.8.3",
    "webpack": "^1.9.10",
    "webpack-dev-server": "^1.9.0"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react"
    ]
  }
}
